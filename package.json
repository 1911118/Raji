{
  "name": "rajdelver",
  "version": "1.0.0",
  "description": "Grocery delivery platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "init-db": "node scripts/init-db.js",
    "setup-monitoring": "node scripts/setup-monitoring.js",
    "setup-sheets": "node scripts/google-sheets/setup-sheet.js",
    "scan-db": "node scripts/google-sheets/scan-mongodb.js",
    "test-db": "node scripts/test-connection.js",
    "test-website": "node scripts/test-website.js",
    "build": "npm run build:clean && npm run build:copy && npm run build:nojekyll",
    "build:clean": "rimraf dist",
    "build:copy": "copyfiles -u 1 \"public/**/*\" dist",
    "build:nojekyll": "echo. > dist/.nojekyll",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^6.17.0",
    "mongoose": "^7.0.3",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "gh-pages": "^6.3.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "playwright": "^1.53.0",
    "rimraf": "^5.0.10",
    "supertest": "^6.3.3"
  }
}
